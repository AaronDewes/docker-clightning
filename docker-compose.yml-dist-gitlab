version: "3.8"
services:
    clightning:
        image: registry.gitlab.com/nolim1t/docker-clightning:v0.9.1-dfbbb889
        container_name: clightning
        network_mode: host
        restart: on-failure
        environment:
            LIGHTNINGD_NETWORK: bitcoin
            LIGHTNINGD_RPC_PORT: 10420
        volumes:
            - "${HOME}/.lightning:/data/.lightning"
            - "${HOME}/.bitcoin:/data/.bitcoin"
