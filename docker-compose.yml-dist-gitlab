version: "3.8"
services:
    clightning:
        image: registry.gitlab.com/nolim1t/docker-clightning:v0.9.3-45303c26@sha256:e55c16552fc7a1f482dc2c3103546c7ecde8871b40930aec1d04f258c221d717
        container_name: clightning
        network_mode: host
        restart: on-failure
        environment:
            LIGHTNINGD_NETWORK: bitcoin
            LIGHTNINGD_RPC_PORT: 10420
        volumes:
            - "${HOME}/.lightning:/data/.lightning"
            - "${HOME}/.bitcoin:/data/.bitcoin"
