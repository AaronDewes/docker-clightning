version: "3.8"
services:
    clightning:
        image: lncm/clightning:v0.9.3@sha256:793b2784178dab1093bd7601b5d9d45e902343aaee3f85dc38bdf8e472ddd22c
        container_name: clightning
        network_mode: host
        restart: on-failure
        environment:
            LIGHTNINGD_NETWORK: bitcoin
            LIGHTNINGD_RPC_PORT: 10420
        volumes:
            - "${HOME}/.lightning:/data/.lightning"
            - "${HOME}/.bitcoin:/data/.bitcoin"
